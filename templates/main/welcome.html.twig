{% extends 'base.html.twig' %}
	{% block javascripts %}
		{{ parent() }}
		{{ encore_entry_script_tags('welcome') }}
	{% endblock %}

{% block title %}Welcome
{% endblock %}

{% block body %}
	{% include 'main/_bar.html.twig' %}
	{% block stylesheet %}
		<link rel="stylesheet" href="{{ asset('css/weather-icons.min.css') }}"/>
	{% endblock %}
	<style>
		.petite {
			font-size: 0.7em;
		}
		.moyenne {
			font-size: 1.4em;
		}
		.grande {
			font-size: 2.2em;
		}
		.gadget_allume {
			padding: 2px 50px;
			background: #c9f7b8;
			border-radius: 5px;
		}
		.background {
			background-image: url("{{ asset("css/images/raspberry_fond_light.jpg") }}");
			background-attachment: fixed;
			background-repeat: no-repeat;
			background-position: 50% 50%;
		}
	</style>

	<div class="container mt-4 mb-4 text-center background">
		<div class="row">
			<div class="col-12 col-md-5 col-xl-3 mt-4">
				<div class="container pt-2 pb-3 border border-secondary rounded-4 bg-secondary bg-gradient bg-opacity-10 text-secondary">
					<div class="moyenne">Welcome
						{{app.user.username}}</div>
					<span class="moyenne">détections récentes:</span>
					<p class="petite histo d-flex justify-content-center"></p>
				</div>
			</div>
			<div class="col-12 col-md-5 offset-md-2 col-xl-3 offset-xl-6 mt-4">
				<div class="container pt-2 pb-3 border border-secondary rounded-4 bg-secondary bg-gradient bg-opacity-10 text-secondary">
					<div id="heure" class="mb-2"></div>
					<div id="lieu" class="mb-2"></div>
					<div id="previsions" class="mb-2 d-flex justify-content-center"></div>
					<div id="temp" class="mb-2 d-flex justify-content-center"></div>
					<div id="etat_detection" class="mb-2 petite"></div>
					<div id="etat_alerte" class="mb-2 petite"></div>
					<div id="etat_leds" class="petite"></div>
				</div>
			</div>
		</div>
	{% endblock %}
