{% extends 'base.html.twig' %}

{% block title %}Ledstrip control
{% endblock %}

{% block body %}
	{% include 'main/_bar.html.twig' %}
	{% block javascript %}
		<script type="text/javascript" src="{{ asset('js/load_rgb.js') }}"></script>

	{% endblock %}
	<style>
		.form-check-input {
			transform: scale(1.4);
		}
	</style>
	<section>
		<br>
		<h3>Controle éclairage</h3>
		<!-- checkbox on/off -->
		<div class="onoffswitch">
			<div class="form-check form-switch">
				<input class="form-check-input" type="checkbox" name="onoffswitch" id="myonoffswitch">
				<label class="form-check-label" for="myonoffswitch"></label>
			</div>
		</div>
		<br>

		<!-- Onglets -->

		<ul class="nav nav-tabs" id="myTabs">
			<li class="nav-item">
				<a class="nav-link active" data-bs-toggle="tab" aria-current="page" href="#a">Leds couleur</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" data-bs-toggle="tab" href="#b">Leds effet</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" data-bs-toggle="tab" href="#c">Leds timer</a>
			</li>
		</ul>
		<div
			class="tab-content">
			<!-- 1er onglet -->
			<div
				id="a" class="tab-pane fade show active">
				<!-- sliders -->
				<div id="container_led1">
					<label id="outputLabel">Changer la couleur:</label>
					<br>
					<table id="table_led1">
						<tr>
							<td>
								<label>R:</label>
							</td>
							<td>
								<input type="range" class="form-range" min="0" max="255" id="rSlider">
							</td>
						</tr>
						<tr></tr>
						<td>
							<label>G:</label>
						</td>
						<td>
							<input type="range" class="form-range" min="0" max="255" id="gSlider">
						</td>
						<tr></tr>
						<td>
							<label>B:</label>
						</td>
						<td>
							<input type="range" class="form-range" min="0" max="255" id="bSlider">
						</td>
					</table>
					<div id="colorBox"></div>
				</div>
			</div>

			<!-- fin du 1er onglet -->
			<!-- 2eme onglet -->
			<div id="b" class="tab-pane fade">
				<div id="container_led2">
					<label id="outputLabel">Sélectionner un effet:</label>
					<br>
					<table id="table_led2">
						<div class="form-check">
							<tr>
								<td><input type="radio" name="effets" id="effet1" class="form-check-input"/><label for="effet1" class="form-check-label">Effet 1</label>
								</td>
								<td><input type="radio" name="effets" id="effet2" class="form-check-input"/><label for="effet2" class="form-check-label">Effet 2</label>
								</td>
								<td><input type="radio" name="effets" id="effet3" class="form-check-input"/><label for="effet3" class="form-check-label">Effet 3</label>
								</td>
							</tr>
							<tr>
								<td><input type="radio" name="effets" id="effet4" class="form-check-input"/><label for="effet4" class="form-check-label">Effet 4</label>
								</td>
								<td><input type="radio" name="effets" id="effet5" class="form-check-input"/><label for="effet5" class="form-check-label">Effet 5</label>
								</td>
								<td><input type="radio" name="effets" id="effet6" class="form-check-input"/><label for="effet6" class="form-check-label">Effet 6</label>
								</td>
							</tr>
							<tr>
								<td></td>
								<td><input type="radio" name="effets" id="effetstop" class="form-check-input"/><label for="effetstop" class="form-check-label">Stop</label>
								</td>
								<td></td>
							</tr>
						</div>
					</table>
				</div>
			</div>
			<!-- fin du 2eme onglet -->
			<!-- 3eme onglet -->
			<div id="c" class="tab-pane fade">
				<div id="container_led3">
					<label id="outputLabel">Placer un timer:</label>
					<br>
					<table id="table_led3">
						<tr>
							<td>
								<label for="timepicker_deb">Début:</label>
							</td>
							<td><input type="text" id="timepicker_deb" value="" class="form-control"/></td>
						</tr>
						<tr>
							<td>
								<label for="timepicker_fin">Fin:</label>
							</td>
							<td><input type="text" id="timepicker_fin" value="" class="form-control"/></td>
						</tr>
					</table>
					<button id="but_efface">Effacer</button>
					<button id="but_enregistre">Enregistrer</button>
				</div>
				<br>
				<div id="list-timer">
					<table id="table_led_list_timer">
						<tr>
							<th>Début</th>
							<th>Fin</th>
							<th>E-mail</th>
							<th>Suppr</th>
						</tr>
						<tr>
							<td>
								<div id="heure_deb"></div>
							</td>
							<td>
								<div id="heure_fin"></div>
							</td>
							<td>
								<div class="form-check">
									<input class="form-check-input" type="checkbox" name="email" id="email"/>
								</div>
							</td>
							<td>
								<button id="icon_eraser"></button>
							</td>
						</tr>
					</table>
				</div>
			</div>
			<!-- fin du 3eme onglet -->
		</div>
	</section>
{% endblock %}
