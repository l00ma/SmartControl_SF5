{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('welcome') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('welcome') }}
{% endblock %}

{% block body %}
<div class="container min-vh-100 my-4 pt-3 pt-md-0 text-center background">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-xl-1 order-2 order-md-1 mt-4">
            <div class="container py-2 border border-secondary rounded-4 bg-secondary bg-gradient bg-opacity-10 text-secondary">
                <div class="moyenne">Dashboard de
                    {{ app.user.username|capitalize }}</div>
                <span class="moyenne">détections récentes:</span>
                <p class="petite d-flex justify-content-center" id="histo"></p>
            </div>
            <div class="container mt-4 py-2 border border-secondary rounded-4 bg-secondary bg-gradient bg-opacity-10 text-secondary">
                <div class="moyenne">Records températures:</div>
                <p class="d-flex justify-content-center" id="record"></p>
            </div>
            <div class="container mt-4 d-flex justify-content-between">
                <button type="button" id="motionBtn" class="btn btn-outline-secondary bg-secondary bg-gradient bg-opacity-10 font-color">Restart motion</button>
                <button type="button" id="rebootBtn" class="btn btn-outline-secondary bg-secondary bg-gradient bg-opacity-10 font-color">Reboot</button>
                <button type="button" id="haltBtn" class="btn btn-outline-secondary bg-secondary bg-gradient bg-opacity-10 font-color">Halt</button>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-4 offset-xl-2 order-1 order-md-2 mt-4">
            <div class="container pt-2 pb-3 border border-secondary rounded-4 bg-secondary bg-gradient bg-opacity-10 text-secondary">
                <div id="heure" class="mb-2"></div>
                <div id="lieu" class="mb-2"></div>
                <div id="previsions" class="mb-2 d-flex justify-content-center"></div>
                <div id="temp" class="mb-2 d-flex justify-content-center"></div>
                <div id="etat_detection" class="mb-2 petite"></div>
                <div id="etat_alerte" class="mb-2 petite"></div>
                <div id="etat_leds" class="petite"></div>
            </div>
        </div>
    </div>
</div>
    {% endblock %}
