{% extends 'base.html.twig' %}

{% block title %}Détection
{% endblock %}

{% block body %}
    {% include '_bar.html.twig' %}

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('mouv') }}
    {% endblock %}
    <div class="ms-2 text-secondary">
        <h3>Détection de mouvements</h3>
        <p>Activité enregistrée par le capteur:</p>
    </div>
    <div class="d-flex flex-column align-items-center">
        <div id="container_chart" style="width: 85%; height: 475px;"></div>
    </div>
    <br>
    <div class="container text-center">
        <div class="row d-flex justify-content-center text-secondary">
            <div class="col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="form-check form-switch ms-2">
                    <input class="form-check-input" type="checkbox" id="myenr_switch">
                    <label class="form-check-label ms-2" for="myenr_switch">Déclencher enregistrement vidéo</label>
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center text-secondary mt-2">
            <div class="col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class="form-check form-switch ms-2">
                    <input class="form-check-input" type="checkbox" id="myalrt_switch">
                    <label class="form-check-label ms-2" for="myalrt_switch">Déclencher alerte email (photo)</label>
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center text-secondary mt-2">
            <div class="col-3 col-sm-2 col-md-2 col-lg-1 col-xl-1">
                <select class="form-select form-select-sm" aria-label=".form-select-sm" id="refresh">
                    <option>5</option>
                    <option>10</option>
                    <option>15</option>
                </select>
            </div>
            <div class="col-9 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                Rafraichissement du graph (min)
            </div>
        </div>
        <div class="row d-flex justify-content-center text-secondary my-5"></div>
    </div>
{% endblock %}
