{% extends 'base.html.twig' %}
{% block title %}Edit your credentials
{% endblock %}

{% block body%}
	{% include 'main/_bar.html.twig' %}
	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<div class="ms-2 text-secondary">
		<h3>Changer vos identifiants</h3>
	</div>
	<div class="container mt-4 text-secondary">
		<form method="post">
			<div class="row align-items-center">
				<div class="col-xs-12 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
					<label for="user">Nom d'utilisateur</label>
					<input type="text" id="user" name="user" value="{{ app.user.username }}" class="form-control">
				</div>
				<div class="col-xs-12 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
					<label for="user">Email</label>
					<input type="text" id="email" name="email" value="{{ app.user.email }}" class="form-control">
				</div>
				<div class="col-xs-12 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
					<label for="pass1">Mot de passe</label>
					<input type="password" id="pass1" name="pass1" class="form-control">
				</div>
				<div class="col-xs-12 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
					<label for="pass2">Confirmer le mot de passe</label>
					<input type="password" id="pass2" name="pass2" class="form-control">
				</div>
				<div class="mt-2 col-xs-12 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
					<button class="btn btn-primary">Sauver</button>
				</div>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		</form>
	</div>
{% endblock %}
