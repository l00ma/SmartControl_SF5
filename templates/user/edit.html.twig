{% extends 'base.html.twig' %}
{% block title %}Editer vos donn√©es
{% endblock %}

{% block body%}
	{% include 'main/_bar.html.twig' %}
	<div class="container mt-4">
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<h1 class="h3 mb-3 font-weight-normal">Change credentials</h1>
		<div class="container mt-4">
			<form method="post">
				<div class="column">
					<div class="col-md-4">
						<label for="user">User name</label>
						<input type="text" id="user" name="user" value="{{ app.user.username }}" class="form-control">
					</div>
					<div class="col-md-4">
						<label for="user">Email</label>
						<input type="text" id="email" name="email" value="{{ app.user.email }}" class="form-control">
					</div>
					<div class="col-md-4">
						<label for="pass1">Password</label>
						<input type="password" id="pass1" name="pass1" class="form-control">
					</div>
					<div class="col-md-4">
						<label for="pass2">Confirm password</label>
						<input type="password" id="pass2" name="pass2" class="form-control">
					</div>
					<div class="mt-2">
						<button class="btn btn-primary">Save</button>
					</div>
				</div>
			</form>
		</div>
	</div>


{% endblock %}
