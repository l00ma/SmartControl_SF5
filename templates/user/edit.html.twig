{% extends 'base.html.twig' %}
{% block title %}Changement d'identifiants
{% endblock %}

{% block body %}
    {% include '_bar.html.twig' %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="ms-2 text-secondary">
        <h3>Changer vos identifiants</h3>
    </div>
    <div class="container mt-4 text-secondary">
        <form method="post">
            <div class="row">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2">
                        <label for="user">Nom d'utilisateur</label>
                        <input type="text" id="user" name="user" value="{{ app.user.username }}" class="form-control">
                    </div>
                    <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2">
                        <label for="user">Email</label>
                        <input type="text" id="email" name="email" value="{{ app.user.email }}" class="form-control">
                    </div>
                    <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2 mt-3">
                        <label for="pass1">Mot de passe</label>
                        <input type="password" id="pass1" name="pass1" class="form-control">
                    </div>
                    <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2">
                        <label for="pass2">Confirmer le mot de passe</label>
                        <input type="password" id="pass2" name="pass2" class="form-control">
                    </div>
                    <div class="col-8 col-sm-5 col-md-4 col-lg-3 col-xl-2">
                        <button class="btn btn-primary mt-3">Sauver</button>
                    </div>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
    </div>
{% endblock %}
