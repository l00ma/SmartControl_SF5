{% extends 'base.html.twig' %}

{% block title %}Vidéos enregistrées
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('gallery') }}
{% endblock %}


{% block body %}
	{% include '_bar.html.twig' %}

	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}

	{% if video is empty %}
		<div class="container text-center">
			Il n'y a aucun enregistrement.
		</div>
	{% else %}
		<div class="container text-center">
			<div class="row my-4 d-flex justify-content-center">
				<div class="col-6 col-sm-3 mb-2">
					<button type="button" id="but_all" class="btn btn-sm btn-primary">Toutes</button>
				</div>
				<div class="col-6 col-sm-3">
					<button type="button" id="but_none" class="btn btn-sm btn-primary">Aucune</button>
				</div>
				<div class="col-6 col-sm-3">
					<button type="button" id="but_download" class="btn btn-sm btn-primary">Télécharger</button>
				</div>
				<div class="col-6 col-sm-3">
					<button type="button" id="but_supprime" class="btn btn-sm btn-primary">Supprimer</button>
				</div>
			</div>
		</div>
		<div class="container text-center" id="tableau">
			<div class="row justify-content-evenly">
			{% for uniqueVideo in video %}
				<div class="col-12 col-sm-6 col-md-6 col-lg-3">
					<a href="/gallery/player?event={{ uniqueVideo.videoFilename }}&id={{ uniqueVideo.videoId }}">
						<img src="{{ uniqueVideo.imagePath }}" alt="Vidéo en cours de création...">
					</a>
					<div class="text-center">
						<span class="petite nom">{{ uniqueVideo.imageName }}</span>
						<input type="checkbox" class="ms-2 video_select" data-url="../{{ uniqueVideo.videoPath }}" data-id_nb="{{ uniqueVideo.videoId }}" data-name="{{ uniqueVideo.videoFilename }}">
					</div>
				</div>
			{% endfor %}
			</div>
		</div>
	{% endif %}
{% endblock %}
